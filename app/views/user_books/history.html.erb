<h1>Books list</h1>
<table class='table table-condensed'>
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>User</th>
      <th>Borrow</th>
      <th>Given back</th>
    </tr>
  </thead>
  <tbody>
    <% @borrows.each_with_index do |borrow, id| %>
      <%= render partial: 'books', locals: { borrow: borrow, id: id } %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Book', new_book_path, class: 'btn btn-default' %>
