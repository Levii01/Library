<% @books.each_with_index do |book, id| %>
  <tr>
    <td><%= id + 1 %></td>
    <td><%= link_to book.title, book %></td>
    <td><%= book.author %></td>
    <td><%= book.grade %></td>
    <td><%= link_to edit_book_path(book), class: "btn btn-default" do %>
          <%= fa_icon "edit" %>
        <% end %>
        <%= link_to book, method: :delete, class: "btn btn-default" do %>
          <%= fa_icon "times" %>
        <% end %>
    </td>
  </tr>
<% end %>
